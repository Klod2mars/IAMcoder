meta:
  model: qwen2.5-coder:7b
  memory: config/profiles/qwen_local.yaml
  mission_id: hello_aihomecoder
  version: 1.0
  description: >
    Simple test mission to confirm AIHomeCoder, Ollama and Qwen are alive and communicating.

intent:
  - Verify AIHomeCoder can read YAML, load memory and run locally.
  - Produce a short markdown output file.
  - Log the mission execution.

context:
  environment: ollama
  language: English
  mode: read_only
  output_format: markdown
  max_tokens: 500

tasks:
  - "Read configuration profile from config/profiles/qwen_local.yaml."
  - "Print system greeting: 'Hello, AIHomeCoder is alive and working locally.'"
  - "List the current operational mode and model."
  - "Write a short Markdown report into /reports/hello_aihomecoder_output.md."
  - "Save a log in /logs/hello_aihomecoder.log."

outputs:
  - format: markdown
    destination: reports/hello_aihomecoder_output.md
  - log: logs/hello_aihomecoder.log

post_actions:
  - Verify output files exist.
  - Print message: 'âœ… AIHomeCoder first contact successful.'
